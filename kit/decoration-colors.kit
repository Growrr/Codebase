<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Decoration: Colors | Codebase</title>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/holder/2.9.1/holder.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="theme/css/styles.css">
  

</head>

<body>

  <!-- @import "site-menubar.kit" -->

  <header class="codebase-docs__header">
    <span><a href="decoration.html">Decoration</a>:</span>
    <h1>Colors</h1>
  </header>

  <!-- @import "site-sidebar.kit" -->

  <p>The Codebase swatch:</p>

  <style>
    .swatch {
      margin: 10px auto 40px;
    }
    
    .legend {
      padding: 0 4px;
      font-weight: bold;
      color: #fff;
      background: #aaa;
      text-align: center;
      vertical-align: middle;
    }
    
    .square {
      width: 50px !important;
      height: 50px !important;
      border: 1px solid #ddd;
    }
    
    .diagonal {
      background: url('images/diagonal.svg') -1px -1px;
    }
  </style>

  <section class="grid grid--gutter grid--nested">
    <div class="col col-md--span-6">

      <table class="swatch">
        <tbody>
          <tr>
            <td></td>
            <td class="legend">1</td>
            <td class="legend">2</td>
            <td class="legend">3</td>
            <td class="legend">4</td>
            <td class="legend">5</td>
            <td class="legend">6</td>
          </tr>
          <tr>
            <td class="legend">A</td>
            <td class="square diagonal"></td>
            <td class="square diagonal"></td>
            <td class="square deco-bg-primary-light"></td>
            <td class="square deco-bg-primary"></td>
            <td class="square deco-bg-primary-dark"></td>
            <td class="square diagonal"></td>
          </tr>
          <tr>
            <td class="legend">B</td>
            <td class="square deco-bg-white"></td>
            <td class="square deco-bg-silver"></td>
            <td class="square deco-bg-secondary-light"></td>
            <td class="square deco-bg-secondary"></td>
            <td class="square deco-bg-secondary-dark"></td>
            <td class="square deco-bg-charcoal"></td>
          </tr>
          <tr>
            <td class="legend">C</td>
            <td class="square diagonal"></td>
            <td class="square diagonal"></td>
            <td class="square deco-bg-warning-light"></td>
            <td class="square deco-bg-warning"></td>
            <td class="square deco-bg-warning-dark"></td>
            <td class="square diagonal"></td>
          </tr>
          <tr>
            <td class="legend">D</td>
            <td class="square diagonal"></td>
            <td class="square diagonal"></td>
            <td class="square deco-bg-success-light"></td>
            <td class="square deco-bg-success"></td>
            <td class="square deco-bg-success-dark"></td>
            <td class="square diagonal"></td>
          </tr>
          <tr>
            <td class="legend">E</td>
            <td class="square diagonal"></td>
            <td class="square diagonal"></td>
            <td class="square deco-bg-error-light"></td>
            <td class="square deco-bg-error"></td>
            <td class="square deco-bg-error-dark"></td>
            <td class="square diagonal"></td>
          </tr>
        </tbody>
      </table>

      <h3>Grayscale</h3>
      
      <table class="table">
        <tr>
          <td class="legend" style="width:46px;"><b>B1</b></td>
          <td class="deco-bg-white" style="width:46px;"></td>
          <td>$color-white</td>
        </tr>
        <tr>
          <td class="legend"><b>B2</b></td>
          <td class="deco-bg-silver"></td>
          <td>$color-silver</td>
        </tr>
        <tr>
          <td class="legend"><b>B3</b></td>
          <td class="deco-bg-light-gray"></td>
          <td>$color-light-gray ($color-secondary-light)</td>
        </tr>
        <tr>
          <td class="legend"><b>B4</b></td>
          <td class="deco-bg-secondary"></td>
          <td>$color-mid-gray ($color-secondary)</td>
        </tr>
        <tr>
          <td class="legend"><b>B5</b></td>
          <td class="deco-bg-secondary-dark"></td>
          <td>$color-dark-gray ($color-secondary-dark)</td>
        </tr>
        <tr>
          <td class="legend"><b>B6</b></td>
          <td class="deco-bg-charcoal"></td>
          <td>$color-charcoal</td>
        </tr>
        </tbody>
      </table>

      
    </div>
    <div class="col col-md--span-6">
      
      <h3>All colors</h3>

      <table class="table">
        <tr>
          <td class="legend" style="width:46px;"><b>A3</b></td>
          <td class="deco-bg-primary-light" style="width:46px;"></td>
          <td>$color-primary-light</td>
        </tr>
        <tr>
          <td class="legend"><b>A4</b></td>
          <td class="deco-bg-primary"></td>
          <td>$color-primary</td>
        </tr>
        <tr>
          <td class="legend"><b>A5</b></td>
          <td class="deco-bg-primary-dark"></td>
          <td>$color-primary-dark</td>
        </tr>
        <tr>
          <td class="legend"><b>B1</b></td>
          <td class="deco-bg-white"></td>
          <td>$color-white</td>
        </tr>
        <tr>
          <td class="legend"><b>B2</b></td>
          <td class="deco-bg-silver"></td>
          <td>$color-silver</td>
        </tr>
        <tr>
          <td class="legend"><b>B3</b></td>
          <td class="deco-bg-light-gray"></td>
          <td>$color-secondary-light ($color-light-gray)</td>
        </tr>
        <tr>
          <td class="legend"><b>B4</b></td>
          <td class="deco-bg-secondary"></td>
          <td>$color-secondary ($color-mid-gray)</td>
        </tr>
        <tr>
          <td class="legend"><b>B5</b></td>
          <td class="deco-bg-secondary-dark"></td>
          <td>$color-secondary-dark ($color-dark-gray)</td>
        </tr>
        <tr>
          <td class="legend"><b>B6</b></td>
          <td class="deco-bg-charcoal"></td>
          <td>$color-charcoal</td>
        </tr>
        <tr>
          <td class="legend"><b>C3</b></td>
          <td class="deco-bg-warning-light"></td>
          <td>$color-warning-light</td>
        </tr>
        <tr>
          <td class="legend"><b>C4</b></td>
          <td class="deco-bg-warning"></td>
          <td>$color-warning</td>
        </tr>
        <tr>
          <td class="legend"><b>C5</b></td>
          <td class="deco-bg-warning-dark"></td>
          <td>$color-warning-dark</td>
        </tr>
        <tr>
          <td class="legend"><b>D3</b></td>
          <td class="deco-bg-success-light"></td>
          <td>$color-success-light</td>
        </tr>
        <tr>
          <td class="legend"><b>D4</b></td>
          <td class="deco-bg-success"></td>
          <td>$color-success</td>
        </tr>
        <tr>
          <td class="legend"><b>D5</b></td>
          <td class="deco-bg-success-dark"></td>
          <td>$color-success-dark</td>
        </tr>
        <tr>
          <td class="legend"><b>E3</b></td>
          <td class="deco-bg-error-light"></td>
          <td>$color-error-light</td>
        </tr>
        <tr>
          <td class="legend"><b>E4</b></td>
          <td class="deco-bg-error"></td>
          <td>$color-error</td>
        </tr>
        <tr>
          <td class="legend"><b>E5</b></td>
          <td class="deco-bg-error-dark"></td>
          <td>$color-error-dark</td>
        </tr>
        </tbody>
      </table>

    </div>
  </section>

  <div class="grid grid--gutter grid--nested">
    <div class="col col-sm--span-4">

      <p><b>Background colors</b></p>

      <div class="deco-p-sm deco-b-thin-dashed deco-bg-white">
        .deco-bg-white
      </div>
      <div class="deco-p-sm deco-bg-silver">
        .deco-bg-silver
      </div>
      <div class="deco-p-sm deco-bg-light-gray">
        .deco-bg-secondary-light, .deco-bg-light-gray
      </div>
      <div class="deco-p-sm deco-text-white deco-bg-mid-gray">
        .deco-bg-secondary,
        <br>.deco-bg-mid-gray
      </div>
      <div class="deco-p-sm deco-text-white deco-bg-dark-gray">
        .deco-bg-secondary-dark,
        <br>.deco-bg-dark-gray
      </div>
      <div class="deco-p-sm deco-text-white deco-bg-charcoal">
        .deco-bg-charcoal
      </div>
      <div class="deco-p-sm deco-bg-primary-light">
        .deco-bg-primary-light
      </div>
      <div class="deco-p-sm deco-text-white deco-bg-primary">
        .deco-bg-primary
      </div>
      <div class="deco-p-sm deco-text-white deco-bg-primary-dark">
        .deco-bg-primary-dark
      </div>
      <div class="deco-p-sm deco-bg-warning-light">
        .deco-bg-warning-light
      </div>
      <div class="deco-p-sm deco-text-white deco-bg-warning">
        .deco-bg-warning
      </div>
      <div class="deco-p-sm deco-text-white deco-bg-warning-dark">
        .deco-bg-warning-dark
      </div>
      <div class="deco-p-sm deco-bg-success-light">
        .deco-bg-success-light
      </div>
      <div class="deco-p-sm deco-text-white deco-bg-success">
        .deco-bg-success
      </div>
      <div class="deco-p-sm deco-text-white deco-bg-success-dark">
        .deco-bg-success-dark
      </div>
      <div class="deco-p-sm deco-bg-error-light">
        .deco-bg-error-light
      </div>
      <div class="deco-p-sm deco-text-white deco-bg-error">
        .deco-bg-error
      </div>
      <div class="deco-p-sm deco-text-white deco-bg-error-dark">
        .deco-bg-error-dark
      </div>

    </div>
    <div class="col col-sm--span-4">

      <p><b>Text colors</b></p>

      <div class="deco-p-sm deco-text-white deco-bg-charcoal">
        .deco-text-white
      </div>
      <div class="deco-p-sm deco-text-silver deco-bg-charcoal">
        .deco-text-silver
      </div>
      <div class="deco-p-sm deco-text-light-gray deco-bg-charcoal">
        .deco-text-secondary-light,
        .deco-text-light-gray
      </div>
      <div class="deco-p-sm deco-text-mid-gray deco-bg-charcoal">
        .deco-text-secondary,
        <br>.deco-text-mid-gray
      </div>
      <div class="deco-p-sm deco-text-dark-gray">
        .deco-text-secondary-dark,
        <br>.deco-text-dark-gray
      </div>
      <div class="deco-p-sm deco-text-charcoal">
        .deco-text-charcoal
      </div>
      <div class="deco-p-sm deco-text-primary-light deco-bg-charcoal">
        .deco-text-primary-light
      </div>
      <div class="deco-p-sm deco-text-primary">
        .deco-text-primary
      </div>
      <div class="deco-p-sm deco-text-primary-dark">
        .deco-text-primary-dark
      </div>
      <div class="deco-p-sm deco-text-warning-light deco-bg-charcoal">
        .deco-text-warning-light
      </div>
      <div class="deco-p-sm deco-text-warning">
        .deco-text-warning
      </div>
      <div class="deco-p-sm deco-text-warning-dark">
        .deco-text-warning-dark
      </div>
      <div class="deco-p-sm deco-text-success-light deco-bg-charcoal">
        .deco-text-success-light
      </div>
      <div class="deco-p-sm deco-text-success">
        .deco-text-success
      </div>
      <div class="deco-p-sm deco-text-success-dark">
        .deco-text-success-dark
      </div>
      <div class="deco-p-sm deco-text-error-light deco-bg-charcoal">
        .deco-text-error-light
      </div>
      <div class="deco-p-sm deco-text-error">
        .deco-text-error
      </div>
      <div class="deco-p-sm deco-text-error-dark">
        .deco-text-error-dark
      </div>

    </div>
    <div class="col col-sm--span-4">

      <p><b>Border colors</b></p>

      <div class="deco-b-thin-dashed">
        <div class="deco-p-sm deco-b-thick-solid deco-b-white deco-bg-light-gray">
          .deco-b-white
        </div>
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-silver">
        .deco-b-silver
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-light-gray">
        .deco-b-secondary-light,
        .deco-b-light-gray
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-mid-gray">
        .deco-b-secondary,
        <br>.deco-b-mid-gray
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-dark-gray">
        .deco-b-secondary-dark,
        <br>.deco-b-dark-gray
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-charcoal">
        .deco-b-charcoal
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-primary-light">
        .deco-b-primary-light
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-primary">
        .deco-b-primary
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-primary-dark">
        .deco-b-primary-dark
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-warning-light">
        .deco-b-warning-light
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-warning">
        .deco-b-warning
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-warning-dark">
        .deco-b-warning-dark
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-success-light">
        .deco-b-success-light
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-success">
        .deco-b-success
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-success-dark">
        .deco-b-success-dark
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-error-light">
        .deco-b-error-light
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-error">
        .deco-b-error
      </div>
      <div class="deco-p-sm deco-b-thick-solid deco-b-error-dark">
        .deco-b-error-dark
      </div>

    </div>
  </div>

  <!-- @import "site-footer.kit" -->

</body>

</html>